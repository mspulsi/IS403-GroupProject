<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saved Articles - Only Good News</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <nav>
            <div class="nav-left">
                <a href="/">Only Good News</a>
                <a href="/saved">Saved Articles</a>
                <a href="/preferences">Preferences</a>
            </div>
            <div class="nav-right">
                <% if (username) { %>
                    <span class="nav-user">Signed in as <%= username %></span>
                    <form action="/logout" method="POST">
                        <button type="submit" class="btn subtle">Logout</button>
                    </form>
                <% } else { %>
                    <a href="/login">Login</a>
                    <a class="btn primary" href="/signup">Sign up</a>
                <% } %>
            </div>
        </nav>
    </header>
    <main>
        <div class="header-section">
            <img class="logo" src="/images/logo.png" alt="Only Good News Logo">
        </div>
        <div id="newsfeed" class="container">
            <% if (savedArticles && savedArticles.length > 0) { %>
                <% savedArticles.forEach(article => { %>
                    <div class="news-item">
                        <h3><%= article.title %></h3>
                        <% if (article.image_url) { %>
                            <img src="<%= article.image_url %>" 
                                alt="Article image"
                                onerror="this.style.display='none'">
                        <% } %>
                        <p><%= article.published ? new Date(article.published).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : 'Date not available' %></p>
                        <a href="<%= article.url %>" target="_blank">Read full article â†’</a>
                        <form action="/save-article" method="POST" class="save-article-form" data-article-url="<%= article.url %>">
                            <input type="hidden" name="title" value="<%= article.title %>">
                            <input type="hidden" name="url" value="<%= article.url %>">
                            <input type="hidden" name="published" value="<%= article.published ? new Date(article.published).toISOString() : '' %>">
                            <input type="hidden" name="image" value="<%= article.image_url || '' %>">
                            <button type="submit" class="save-btn saved" aria-label="Article saved" disabled>
                                <span class="bookmark-icon" style="display: none;">Save</span>
                                <span class="checkmark-icon">Saved</span>
                            </button>
                        </form>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="card">
                    <h2>No Saved Articles</h2>
                    <p class="muted">You haven't saved any articles yet. Start saving articles from the <a href="/">home page</a>!</p>
                </div>
            <% } %>
        </div>
    </main>
    <footer>&copy; 2025 Only Good News. All rights reserved.</footer>
</body>
</html>

