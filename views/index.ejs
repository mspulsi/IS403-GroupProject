<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Only Good News</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <nav>
            <div class="nav-left">
                <a href="/">Only Good News</a>
                <a href="/preferences">Preferences</a>
            </div>
            <div class="nav-right">
                <% if (username) { %>
                    <span class="nav-user">Signed in as <%= username %></span>
                    <form action="/logout" method="POST">
                        <button type="submit" class="btn subtle">Logout</button>
                    </form>
                <% } else { %>
                    <a href="/login">Login</a>
                    <a class="btn primary" href="/signup">Sign up</a>
                <% } %>
            </div>
        </nav>
    </header>
    <main>
        <div class="header-section">
            <img class="logo" src="/images/logo.png" alt="Only Good News Logo">
        </div>
        <div id="newsfeed" class="container">
            <% if (news.length > 0) { %>
                <% news.forEach(post => { %>
                    <div class="news-item">
                        <h3><%= post.title %></h3>
                        <% if (post.thread && post.thread.main_image) { %>
                            <img src="<%= post.thread.main_image %>" 
                                alt="Article image"
                                onerror="this.style.display='none'">
                        <% } %>
                        <p><%= new Date(post.published).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                        <a href="<%= post.url %>" target="_blank">Read full article â†’</a>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No news found.</p>
            <% } %>
        </div>
    </main>
    <footer>&copy; 2025 Only Good News. All rights reserved.</footer>
</body>
</html>